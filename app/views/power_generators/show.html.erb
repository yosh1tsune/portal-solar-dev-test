<div>
  <div class="header">
    <div class="logo"><%= image_tag 'ps_logo.png' %></div>
    <div class="header__title">Geradores de Energia</div>
  </div>
  <div class="container" >
    <div class="box card power_generator-card">
      <%= image_tag @power_generator.image_url, class: 'power_generator-card__img' %>
      <div class="power_generator-card__body">
        <h2><%= @power_generator.name.upcase %></h2>
        <p class="power_generator-card__price"><%= number_to_currency(@power_generator.price, unit: "R$ ", precision: 2, :separator => ",", :delimiter => ".") %></p>
        <p><strong>Descrição: </strong><%= @power_generator.description %></p>
        <p><strong>Potencia: </strong><%= @power_generator.kwp %>kWp</p>
        <p><strong>Altura: </strong><%= @power_generator.height %>m</p>
        <p><strong>Largura: </strong><%= @power_generator.width %>m</p>
        <p><strong>Comprimento: </strong><%= @power_generator.lenght %>m</p>
        <p><strong>Peso: </strong><%= @power_generator.weight %>m</p>
      </div>
    </div>
  </div>
    
  <div style="margin-top: 100px">
    <h2>Frete</h2>
    <%= form_tag(set_freight_power_generator_path, method: "get") do %>
      <div class="simple-form">
        <div class="simple-form__input">
          <%= text_field_tag :cep, 'CEP', class: 'form-control form-control-lg', placeholder: 'CEP' %>
        </div>
        <div class="simple-form__input" style="margin-left: 20px">
          <%= submit_tag 'Calcular' %>
        </div>
      </div>
    <% end %>
    
    <% if @address != nil%>
      <%= render partial: 'freight', locals: {power_generator: @power_generator, freight: @freight, address: @address, total_value: @total_value} %>
    <% end %>
    </div>
</div>
